@using DancingGoat.InlineEditors
@using DancingGoat.Widgets

@model ListingWidgetViewModel

@if (Context.Kentico().PageBuilder().EditMode)
{
    <div class="listing-inline-editor">
        <partial name="~/Components/InlineEditors/DropdownEditor/_DropdownEditor.cshtml" model="@Model.PageTypeSelectorViewModel" />
        <partial name="~/Components/InlineEditors/OrderDirectionEditor/_OrderDirectionEditor.cshtml" 
            model="new OrderDirectionViewModel
                {
                    PropertyName = nameof(ListingWidgetProperties.OrderDirection), 
                    Order = Model.OrderDirection
                }" />
        <vc:path-editor property-name="@nameof(ListingWidgetProperties.SelectedPage)" page="@Model.SelectedPage" />
    </div>
}

<ul>
    @{
        foreach(var listingPage in Model.Pages)
        {
            <li>@listingPage.DocumentName</li>
        }
    }
</ul>